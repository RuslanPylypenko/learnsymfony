{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container">
        <h1>Article</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-thumbnail" style="width: 200px" src="{{ asset(article.imageSrc )  }}" alt="article.title"></td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ article.text }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ article.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('article_index') }}"><i class="fas fa-arrow-left"></i></a>

            <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>

            {{ include('article/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
